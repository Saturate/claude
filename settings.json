{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git stash:*)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(git remote:*)",
      "Bash(git tag:*)",
      "Bash(which:*)",
      "WebSearch",
      "Bash(pnpm install:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm list:*)",
      "Bash(pnpm why:*)",
      "Bash(pnpm outdated:*)",
      "Bash(pnpm view:*)",
      "Bash(pnpm audit:*)",
      "Bash(pnpm licenses:*)",
      "Bash(pnpm ls:*)",
      "Bash(pnpm info:*)",
      "Bash(pnpm test:*)",
      "WebFetch(domain:akj.io)",
      "mcp__chrome-devtools__*",
      "mcp__chrome-devtools-2__*",
      "mcp__chrome-devtools-3__*",
      "mcp__chrome-devtools-visible__*",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(lsof:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run watch:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh repo view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh release view:*)",
      "Bash(gh release list:*)",
      "Bash(gh auth status:*)",
      "Bash(pnpm --version:*)",
      "Bash(node --version:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm list:*)",
      "Bash(npm ls:*)",
      "Bash(npm why:*)",
      "Bash(npm outdated:*)",
      "Bash(npm view:*)",
      "Bash(npm info:*)",
      "Bash(npm audit:*)",
      "Bash(npm test:*)",
      "Bash(npm --version:*)",
      "Bash(docker ps:*)",
      "Bash(docker images:*)",
      "Bash(docker logs:*)",
      "Bash(docker inspect:*)",
      "Bash(docker compose ps:*)",
      "Bash(docker compose logs:*)",
      "Bash(docker compose config:*)",
      "Bash(docker stats:*)",
      "Bash(docker top:*)",
      "Bash(docker port:*)",
      "Bash(docker network ls:*)",
      "Bash(docker network inspect:*)",
      "Bash(docker volume ls:*)",
      "Bash(docker version:*)",
      "Bash(docker info:*)",
      "Bash(dig:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -f:*)",
      "Bash(git push --force:*)",
      "Bash(git branch -D:*)",
      "Read(.env)",
      "Read(.env.*)",
      "Edit(.env)",
      "Edit(.env.*)"
    ],
    "ask": [
      "Bash(git push:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/log-tool-usage.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/log-tool-usage.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true
  }
}
